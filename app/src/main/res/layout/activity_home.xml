<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/android_bg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".HomeActivity">

    <!--    <ImageView
            android:src="@drawable/ok"
            android:scaleType="fitEnd"
            style="@style/both_match_parent" />-->

    <LinearLayout
        android:id="@+id/topLinear"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        style="@style/match_wrap_content">

        <Button
            android:id="@+id/btnDetectGame"
            android:textStyle="bold"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:text="Detect Game"
            android:background="@drawable/green_bar_s"
            android:padding="@dimen/activity_horizontal_margin"
            style="@style/match_wrap_content" />

        <Button
            android:id="@+id/btnPatchGame"
            android:textStyle="bold"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:text="Apply Patch"
            android:background="@drawable/green_bar_s"
            android:padding="@dimen/activity_horizontal_margin"
            style="@style/match_wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_above="@id/topLinear"
        android:orientation="vertical"
        style="@style/match_wrap_content">

        <TextView
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:gravity="center"
            android:text="Version 1.0 Detect game before patch"
            android:textSize="14sp"
            android:textColor="#fff"
            android:padding="8dp"
            android:background="#0a0"
            style="@style/match_wrap_content" />

        <FrameLayout
            android:layout_marginBottom="8dp"
            android:background="#0a0"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            style="@style/match_wrap_content">

            <TextView
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Game Not detected"
                android:textSize="14sp"
                android:textColor="#fff"

                android:background="#0a0"
                style="@style/match_wrap_content" />

            <ImageView
                android:layout_margin="4dp"
                android:layout_gravity="center|right"
                android:src="@drawable/wrong"
                android:layout_width="48dp"
                android:layout_height="48dp" />


        </FrameLayout>


        <EditText

            android:id="@+id/ed_diamond"
            android:textStyle="bold"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:textSize="18sp"
            android:paddingLeft="56dp"
            android:textColorHint="#d1d1d1"
            android:hint="[1-999999]"
            android:inputType="number"
            android:textColor="@android:color/white"
            android:background="@drawable/diamants_bar"
            style="@style/match_wrap_content"
            android:layout_height="48dp" />

        <EditText
            android:paddingLeft="56dp"
            android:textColorHint="#d1d1d1"
            android:hint="[1-999999]"
            android:inputType="number"
            android:id="@+id/ed_coin"
            android:textStyle="bold"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:background="@drawable/coin_bar"
            style="@style/match_wrap_content"
            android:layout_height="48dp" />

        <EditText
            android:paddingLeft="56dp"
            android:textColorHint="#d1d1d1"
            android:hint="[1-999999]"
            android:inputType="number"
            android:id="@+id/ed_wood"
            android:textStyle="bold"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:background="@drawable/wood_bar"
            style="@style/match_wrap_content"
            android:layout_height="48dp" />


        <TableLayout
            android:layout_margin="8dp"
            style="@style/match_wrap_content">

            <TableRow style="@style/match_wrap_content">

                <Switch
                    android:layout_weight="1"
                    style="@style/both_wrap_content"
                    android:text="Anti BAN" />

                <Switch
                    android:layout_weight="1"
                    style="@style/both_wrap_content"
                    android:text="Proxy" />


            </TableRow>

            <TableRow
                android:layout_marginTop="8dp"
                style="@style/match_wrap_content">

                <Switch
                    android:layout_weight="1"
                    style="@style/both_wrap_content"
                    android:text="256 Bit SSL Encryption" />

                <Switch
                    android:layout_weight="1"
                    style="@style/both_wrap_content"
                    android:text="Detect Game" />


            </TableRow>


        </TableLayout>


    </LinearLayout>


</RelativeLayout>
